<?xml version="1.0" encoding="UTF-8"?>
<root>
    <config link="manage"/>
    <tables>
        <table name="article" tableName="a_medium_article" primaryKey="id"
               model="app.hongs.serv.medium.ABaseModel">
            <assoc type="HAS_MANY" name="species"  tableName="species" foreignKey="link_id" where="`link`='article'">
            </assoc>
            <assoc type="HAS_MANY" name="statics"  tableName="statics" foreignKey="link_id" where="`link`='article'">
            </assoc>
            <assoc type="HAS_MORE" name="sections" tableName="segment" foreignKey="link_id" where="`link`='article'">
                <assoc type="BLS_TO" name="section" tableName="section" foreignKey="sect_id"/>
            </assoc>
        </table>
        <table name="section" tableName="a_medium_section" primaryKey="id"
               model="app.hongs.serv.medium.ABaseModel">
            <assoc type="BLS_TO" name="section" foreignKey="pid"></assoc>
        </table>
        <table name="segment" tableName="a_medium_segment" primaryKey="id">
            <assoc type="BLS_TO" name="section" foreignKey="sect_id"></assoc>
        </table>
        <table name="comment" tableName="a_medium_comment" primaryKey="id"
               model="app.hongs.serv.medium.ALinkModel">
            <assoc type="BLS_TO" name="prev" tableName="consent" foreignKey="pid"></assoc>
            <assoc type="BLS_TO" name="mate" tableName="member.user" foreignKey="mate_id" select="id,name,head"></assoc>
            <assoc type="BLS_TO" name="user" tableName="member.user" foreignKey="user_id" select="id,name,head"></assoc>
        </table>
        <table name="consent" tableName="a_medium_consent" primaryKey="id"
               model="app.hongs.serv.medium.ALinkModel">
            <assoc type="BLS_TO" name="user" tableName="member.user" foreignKey="user_id" select="id,name,head"></assoc>
        </table>
        <table name="dissent" tableName="a_medium_dissent" primaryKey="id"
               model="app.hongs.serv.medium.ALinkModel">
            <assoc type="BLS_TO" name="user" tableName="member.user" foreignKey="user_id" select="id,name,head"></assoc>
        </table>
        <table name="browses" tableName="a_medium_browses" primaryKey="id"
               model="app.hongs.serv.medium.ALinkModel"></table>
        <table name="species" tableName="a_medium_species" primaryKey="id"
               model="app.hongs.serv.medium.ASubsModel"></table>
        <table name="statics" tableName="a_medium_statics" primaryKey="id"
               model="app.hongs.serv.medium.ASubsModel"></table>
    </tables>
</root>
